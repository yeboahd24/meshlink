FROM golang:1.21-alpine AS builder

WORKDIR /app
COPY . .
RUN go mod init github.com/meshlink/church-streaming || true
RUN go mod tidy
RUN CGO_ENABLED=0 GOOS=linux go build -o broadcaster ./cmd/broadcaster

FROM alpine:latest
RUN apk --no-cache add ca-certificates
WORKDIR /root/

COPY --from=builder /app/broadcaster .
COPY config.json .

EXPOSE 8080
CMD ["./broadcaster"]